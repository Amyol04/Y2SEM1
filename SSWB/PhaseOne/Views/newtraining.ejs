<!DOCTYPE html>
<html>
    <nav>
        <%- include('partials/head') %>
    </nav>
    <head>
        <link rel="stylesheet" href="./StyleSheets/About.css">
    </head>
<body>

    <div class="wrapper">
        <h1><%= title %></h1>
        <div style="margin:0 auto; width:50%; padding:20px">
            <form action="/trainings/create" method="POST"> 
                <h3>Personal Details!</h3>
                <label>Name</label><br>
                <input type="text" name="name" required>
                <br><br>

                <label>Identification</label><br>
                <input type="text" name="identification" required>
                <br><br>

                <label>Date</label><br>
                <input type="date" name="date" required>
                <br><br>

                <label>Time</label><br>
                <input type="time" name="time" required>
                <br><br>

                <h3> Card Details!</h3>
                <label>Card Number</label><br>
                <input type="text"name="card_no"minlength="12" maxlength="19" required>
                <br><br>

                <label>Expiry Date (MM/YY)</label><br>
                <input type="text" name="card_date" required>
                <br><br>

                <label>CVV</label><br>
                <input type="text" name="cvv" maxlength="4" minlength="3" required>
                <br><br>
                <button type="submit" class="button">Submit</button>
                    </form>
                </div>

        <a href="/trainings/create">View Current Bookings</a>
    </div>
<%- include('partials/foot') %>
</body>
</html>
